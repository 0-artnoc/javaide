<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/img_expand_all"
            android:background="?colorPrimaryDark"
            android:padding="4dp"
            android:text="@string/project_file"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_collapse"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_fullscreen_exit_white_24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/img_collapse"
            app:srcCompat="@drawable/ic_fullscreen_white_24dp"
            android:layout_alignBottom="@+id/textView2"
            android:id="@+id/img_expand_all" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/container_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:windowBackground">

        </FrameLayout>
    </HorizontalScrollView>

</LinearLayout>
